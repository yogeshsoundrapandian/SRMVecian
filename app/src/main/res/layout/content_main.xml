<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#E0E0E0"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.srmvec.srmvecian.MainActivity">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="695dp"
        android:id="@+id/scrollView"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/bggggg"
        android:visibility="visible"
        android:nestedScrollingEnabled="false"
        android:fillViewport="false">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:id="@+id/relativeLayout"
                android:layout_centerInParent="true"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="06dp"
                android:layout_marginRight="06dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="College corner"
                    android:id="@+id/textView9"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/textView9"
                    android:layout_alignParentStart="false"
                    android:weightSum="1"
                    android:layout_alignParentEnd="false"
                    android:gravity="center">

                    <Button
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:id="@+id/bad"
                        android:src="@drawable/newslogo"
                        android:text="website"
                        android:textSize="13sp"
                        android:textAlignment="center"
                        android:gravity="bottom|center"
                        android:background="@android:color/transparent"
                        android:layout_alignParentTop="true"
                        android:layout_toStartOf="@+id/bco" />

                    <Button
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:id="@+id/bco"
                        android:gravity="bottom|center"
                        android:text="Courses"
                        android:textSize="13sp"
                        android:background="@android:color/transparent"
                        android:layout_alignParentTop="true"
                        android:layout_toStartOf="@+id/bfb" />

                    <Button
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:id="@+id/bfb"
                        android:text="Fb page"
                        android:textSize="13sp"
                        android:gravity="bottom|center"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:background="@android:color/transparent"
                        android:layout_marginRight="05dp" />

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:id="@+id/imageView5"
                        android:src="@drawable/newslogo"
                        android:layout_marginLeft="25dp"
                        android:layout_alignStart="@+id/bad"
                        android:layout_centerVertical="true" />

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:id="@+id/imageView3"
                        android:src="@drawable/building"
                        android:layout_marginLeft="25dp"
                        android:layout_alignTop="@+id/imageView5"
                        android:layout_toEndOf="@+id/bad" />

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:id="@+id/imageView4"
                        android:src="@drawable/web"
                        android:layout_marginLeft="25dp"
                        android:layout_alignTop="@+id/imageView3"
                        android:layout_alignStart="@+id/bfb" />

                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="305dp"
                android:layout_marginTop="22dp"
                android:background="@color/dim_foreground_disabled_material_dark">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Students corner"
                    android:id="@+id/textView8"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginLeft="05dp" />



                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="30dp"
                    android:layout_centerHorizontal="true">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="50dp"
                        android:gravity="center"
                        android:weightSum="1">

                        <Spinner
                            android:layout_width="250dp"
                            android:layout_height="fill_parent"
                            android:id="@+id/spinner"
                            android:layout_marginLeft="15dp"
                            android:spinnerMode="dropdown"
                            android:background="@color/hint_foreground_material_dark"
                            android:layout_weight="0.32" />


                        <Button
                            android:layout_width="38dp"
                            android:layout_height="38dp"
                            android:id="@+id/bqb"
                            android:ellipsize="none"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/pplay"
                            android:gravity="center_vertical"
                            android:layout_gravity="center_vertical" />

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:weightSum="1">

                        <Spinner
                            android:layout_width="250dp"
                            android:layout_height="fill_parent"
                            android:id="@+id/spinner2"
                            android:layout_marginLeft="15dp"
                            android:spinnerMode="dropdown"
                            android:background="@color/hint_foreground_material_dark"
                            android:layout_weight="0.30" />

                        <Button
                            android:layout_width="38dp"
                            android:layout_height="38dp"
                            android:id="@+id/bqb2"
                            android:ellipsize="none"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/pplay"
                            android:gravity="center_vertical"
                            android:layout_gravity="center_vertical" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Study materials:"
                        android:id="@+id/textView10"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginTop="15dp"
                        android:textColor="@android:color/secondary_text_light"
                        android:layout_marginLeft="05dp" />

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginTop="15dp">

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="fill_parent"
                            android:layout_height="55dp"
                            android:weightSum="1"
                            android:gravity="center">

                            <Button
                                android:layout_width="150dp"
                                android:layout_height="fill_parent"
                                android:id="@+id/ibrej"
                                android:layout_weight="0.5"
                                android:layout_marginRight="01dp"
                                android:capitalize="none"
                                android:background="@drawable/rj"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@android:color/holo_green_dark"
                                android:layout_marginLeft="05dp" />

                            <Button
                                android:layout_width="150dp"
                                android:layout_height="match_parent"
                                android:id="@+id/ibvid"
                                android:layout_weight="0.5"
                                android:layout_marginLeft="01dp"
                                android:background="@drawable/vplogo"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@android:color/holo_orange_dark"
                                android:layout_marginRight="05dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="55dp"
                            android:gravity="center"
                            android:layout_marginTop="03dp">

                            <Button
                                android:layout_width="160dp"
                                android:layout_height="fill_parent"
                                android:id="@+id/ibtut"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@android:color/holo_green_dark"
                                android:background="@drawable/tplogo" />
                        </LinearLayout>
                    </LinearLayout>


                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="95dp"
                android:layout_marginTop="20dp"
                android:background="@color/dim_foreground_disabled_material_dark">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Solution finder"
                    android:id="@+id/textView12"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginLeft="05dp" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="55dp"
                    android:weightSum="1"
                    android:gravity="center"
                    android:layout_marginTop="30dp">

                    <Button
                        android:layout_width="160dp"
                        android:layout_height="fill_parent"
                        android:id="@+id/so"
                        android:layout_weight="0.5"
                        android:layout_marginLeft="05dp"
                        android:background="@drawable/stof"
                        android:textSize="16sp"
                        android:textColor="@android:color/holo_orange_dark"
                        android:textStyle="bold"
                        android:layout_marginRight="01dp" />

                    <Button
                        android:layout_width="160dp"
                        android:layout_height="match_parent"
                        android:id="@+id/qu"
                        android:layout_weight="0.5"
                        android:background="@drawable/quora"
                        android:textSize="16sp"
                        android:textColor="@android:color/holo_red_light"
                        android:textStyle="bold"
                        android:layout_marginLeft="01dp"
                        android:layout_marginRight="05dp" />
                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>

    <WebView
        android:layout_width="01dp"
        android:layout_height="01dp"
        android:id="@+id/webView4"
        android:layout_gravity="right"
        android:layout_alignParentBottom="true" />

</RelativeLayout>
